<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_train_num_to_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rishabhshukla.rubio.TrainNumToName"
    android:orientation="vertical"
    android:weightSum="3">

    <android.support.v7.widget.CardView
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/card"
        android:layout_height="match_parent"
        android:paddingBottom="20dp"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Enter Train No./Name:"
                    android:textStyle="normal|bold"
                    android:textSize="12sp"
                    android:textAlignment="textStart"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <EditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/etTrainNoToName" />
            </LinearLayout>
            <Button
                android:id="@+id/btnTrainNAME"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Get Train Info"
                android:background="@color/colorPrimary"
                style="@style/Widget.AppCompat.Button.Colored" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Train Name:"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTrainKaNaam" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Train No:"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTrainKaNo" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Monday"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvMon" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tuesday"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvTue" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Wednesday"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvWed" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Thursday"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvThur" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Friday"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvFri" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Saturday"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvSat" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Sunday"
                    android:inputType="number"
                    android:textStyle="normal|bold"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:paddingLeft="18dp"
                    android:fontFamily="monospace"/>
                <TextView
                    android:gravity="center"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:text=""
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:id="@+id/tvSun" />

            </LinearLayout>


        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>
